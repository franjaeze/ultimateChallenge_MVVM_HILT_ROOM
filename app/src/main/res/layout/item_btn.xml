    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="15dp"
    android:layout_marginHorizontal="2dp"
    android:layout_width="110dp"
    android:layout_height="50dp">


<androidx.cardview.widget.CardView
